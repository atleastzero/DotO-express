<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <form action="/login" method="post">
      <legend>Login</legend>
      <div class="form-group">
        <label for="sign-up-username">Username</label>
        <input name="username" type="text" class="form-control" id="sign-up-username" placeholder="username">
      </div>
      <div class="form-group">
        <label for="sign-up-password">Password</label>
        <input type="password" name="password" class="form-control" id="sign-up-password" placeholder="password">
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
  </div>
</div>